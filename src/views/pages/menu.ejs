<%- include('../partials/head') %>
    <%- include('../partials/header') %>
    <% if(products && products.length > 0) { %>
        <ul id="products" class="row">
        <% var i = 0; products.forEach(function(product) { i++; %>
            <li class="product col col-md-4">
                <h3 class="product-title"><%= product.name %></h3>
                <figure class="product-image">
                    <img src="<%= product.image %>" alt="" class="img-thumbnail img-responsive">
                </figure>
                <div class="thumbnail">
                        <div>
                            <div class="clearfix">
                                <div class="price pull-left">$<%= product.price %></div>
                                <a href="/cart/add-to-cart/<%= product._id %>" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                            </div> 
                        </div>
                </div>
            </li>
            <% if(i % 3 === 0) {%><div class="clearfix"></div><% } %>
        <% }); %>
        </ul>
        <% } else { %>
            <p class="alert alert-info">Sorry, no products to show.</p>
        <% } %>
    

<footer>
    <%- include('../partials/footer') %>
</footer>